<div class="modal fade" id="registerBox" tabindex="-1" role="dialog" aria-labelledby="registerBox" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="registerBox">register</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
              <div class="form-group">
                  <label for="registerAccountInput">username</label>
                  <input type="text" class="form-control" id="registerBoxAccountInput" name="username" aria-describedby="emailHelp" placeholder="Enter account name">
              </div>
              <div class="form-group">
                  <label for="registerBoxPasswordInput">Password</label>
                  <input type="password" class="form-control" id="registerBoxPasswordInput" name="password" aria-describedby="emailHelp" placeholder="Enter password">
              </div>
              <div class="form-group">
                  <label for="registerBoxPasswordInput">Type Password again</label>
                  <input type="password" class="form-control" id="registerBoxPasswordInput" name="password2" aria-describedby="emailHelp" placeholder="Enter password again">
              </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>
    </div>
</div>